<Window x:Class="ProyectoFinalUniversidad.CapaPresentacion.Views.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalUniversidad.CapaPresentacion.Views"
        mc:Ignorable="d"
        Title="Bienvenido al Sistema Universitario"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#800000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo centrado -->
        <Image Source="/CapaPresentacion/Assets/LogoUniversidad.png"
               Width="220"
               Height="220"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

        <!-- Barra de carga -->
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="Conectando al servidor..." Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar Width="200" Height="8" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>
